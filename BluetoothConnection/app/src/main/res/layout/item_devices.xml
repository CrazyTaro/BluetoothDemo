<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <TextView
        android:id="@+id/tv_item_devices_name"
        style="@style/tv_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设备名称:"/>

    <TextView
        android:id="@+id/tv_item_devices_addr"
        style="@style/tv_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设备地址:"/>

    <TextView
        android:id="@+id/tv_item_devices_status"
        style="@style/tv_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="连接状态:"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_item_devices_changed_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:padding="@dimen/default_padding"
            android:text="连接/断开连接"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_item_devices_remove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:padding="@dimen/default_padding"
            android:text="移除设备"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>